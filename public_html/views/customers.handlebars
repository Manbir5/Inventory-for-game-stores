<!DOCTYPE html>

<head>
     <link rel="stylesheet" href="/static/css/design.css">

    <title>Customer Details</title>

</head>

<body>

    <div class="topNavigation">
        <a href="./index.html">Index</a>
        <a class = "on" href="/customers">Customers</a>
        <a href="/orders">Orders</a>
        <a href="/games">Games</a>
        <a href="/consoles">Consoles</a>
        <a href="/stores">Stores</a>
        <a href="/rewards">Rewards</a>
    </div>

    <br />
    <br />
    <br />


  <h2>Search</h2>

    <fieldset>
    <form id='search_customers' action='' method=''>
<!--- this form does not submit directly, the button handles all the interaction with backend -->
    <label> Search customers whose first name starts with:</label>
    <input id='first_name_search_string' type='text' name='first_name_search_string' value=''>
    <input type="button" value="Search" onclick="searchCustomersByFirstName()">
    </form>
    </fieldset>
  <br />

  <h2> Add a Customer</h2>
  
  <a class="button" href = "/addCustomers">Add a Customer</a>

  <br />
  <br />

<h2>Customer Details</h2>

<h3>Current people:</h3>
<table>
    <thead> 
        <th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Phone Number</th>
        <th>Street Number</th>
        <th>Street Name</th>
        <th>Unit</th>
        <th>City</th>
        <th>Postal code</th>
        <th>Province</th>
        <th>Country</th>
        <th>Update</th>
        <th>Delete</th>
    </thead> 
    <tbody>
        {{#each customers}} 
        <tr> 
            <td>{{customer_id}}</td> 
            <td>{{customer_first_name}}</td> 
            <td>{{customer_last_name}}</td> 
            <td>{{customer_email}}</td> 
            <td>{{customer_phone_number}}</td> 
            <td>{{customer_address_street_number}}</td> 
            <td>{{customer_address_street_address}}</td> 
            <td>{{customer_address_unit}}</td> 
            <td>{{customer_address_city}}</td> 
            <td>{{customer_address_postal_code}}</td> 
            <td>{{customer_address_province}}</td> 
            <td>{{customer_address_country}}</td> 
            <td><a href="/customers/{{customer_id}}">Update</a></td>
          <td><button onclick= deleteCustomers({{customer_id}})>Delete</button></td>  
        </tr> 
        {{/each}} 
    </tbody> 
</table> 
</body> 
</html>
